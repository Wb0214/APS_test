<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/result_Num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"/>

        <TextView
            android:id="@+id/result_MaterialNum_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:layout_weight="0.4"
            android:text="TextView"/>

        <TextView
            android:id="@+id/result_product_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:autoSizeTextType="uniform"
            android:text="TextView"/>

        <TextView
            android:id="@+id/result_quantity_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="TextView"/>

        <TextView
            android:id="@+id/result_useQuantity_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:layout_weight="0.15"
            android:text="TextView"/>

        <TextView
            android:id="@+id/result_nuit_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="TextView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@drawable/underline_dashed">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text=""/>

        <TextView
            android:id="@+id/result_directions_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:layout_weight="1"
            android:text="TextView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text=""/>

    </LinearLayout>


</LinearLayout>